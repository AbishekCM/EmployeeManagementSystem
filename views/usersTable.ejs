<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Styled HTML Table</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }

        table {


            width: 80%;
            border-collapse: collapse;
            margin: 20px auto;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: cornsilk;
            color: black;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        caption {
            font-size: 1.5em;
            margin: 10px 0;
            color: #333;
        }

        img {
            max-width: 80px;
            /* Fixed width for images */
            max-height: 80px;
            /* Fixed height for images */
            object-fit: cover;
            /* Ensures images are cropped appropriately */
        }
    </style>
</head>

<body>

    <form action="/users/table/search" method="POST">
        <input type="text" name="name" placeholder="type name...">
        <button type="submit">Search By name</button>
    </form>

    <table>
        <caption>Employees Data</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Role</th>
                <th>Photo</th>

            </tr>
        </thead>
        <tbody>
            <% for(let user of users) { %>

                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.age %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.role %>
                    </td>
                    <td><img src="/images/<%= user.image %>" alt=""></td>


                </tr>


                <% } %>


        </tbody>
    </table>

    <% if (view==='limited' ) { %>

        <% if (currentPage> 1) { %>
            <a href="/users/table?page=<%=currentPage-1 %>&limit=<%= limitNum %>">Previous</a>
            <% } %>

                <% for( let index=1; index <=totalPages; index++){ %>

                    <a href="/users/table?page=<%=index %>&limit=<%= limitNum %>">
                        <%= index %>
                    </a>
                    <% } %>

                        <% if (currentPage < totalPages) { %>
                            <a href="/users/table?page=<%=currentPage+1 %>&limit=<%= limitNum %>">Next</a>
                            <% } %>

                                <% } %>



</body>

</html>